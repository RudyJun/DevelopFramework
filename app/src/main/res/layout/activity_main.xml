<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.rudy.framework.widget.ScrollViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerColor" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#ffffff"
        custom:tl_iconHeight="24dp"
        custom:tl_iconMargin="1dp"
        custom:tl_iconWidth="24dp"
        custom:tl_textSelectColor="@color/orange"
        custom:tl_textUnselectColor="#afafaf"
        custom:tl_textsize="11sp" />
</LinearLayout>
